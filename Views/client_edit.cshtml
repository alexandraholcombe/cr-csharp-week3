@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Edit @Model["client"].GetClientName()</h1>

<form action="/clients/@Model["client"].GetClientId()/edit" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name="client-stylist-id" value="@Model["client"].GetClientStylistId()">
    <input type="hidden" name="client-id" value="@Model["client"].GetClientId()">
    <div class="form-group">
        <label for="new-client-name">New Name:</label>
        <input type="text" name="new-client-name" id="new-client-name">
    </div>

    <div class="form-group">
        <label for="new-client-stylist">New Stylist:</label>
        <select name="new-client-stylist" id="new-client-stylist">
            @foreach (var stylist in @Model["stylists"])
            {
                <option value="@stylist.GetStylistId()">@stylist.GetStylistName()</option>
            }
        </select>

    </div>
    <button type="submit">Submit</button>
</form>

<p><a href="/clients/@Model["client"].GetClientId()/">Back to @Model["client"].GetClientName()</a></p>
<p><a href="/stylists/@Model["stylist"].GetStylistId()">Back to @Model["stylist"].GetStylistName()</a></p>
<p><a href="/">All Stylists</a></p>
